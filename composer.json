{
  "name": "eureka/component-orm",
  "description": "PHP orm library.",
  "type": "library",
  "minimum-stability": "stable",
  "license": "MIT",

  "authors": [
    {
      "name": "Romain Cottard",
      "role": "Developer"
    }

  ],

  "autoload": {
    "psr-4": {
      "Eureka\\Component\\Orm\\": "./src"
    }
  },

  "autoload-dev": {
    "psr-4": {
      "Eureka\\Component\\Orm\\Tests\\": "./src"
    }
  },

  "require": {
    "php": "7.4.*|8.0.*|8.1.*",
    "ext-pdo": "*",

    "eureka/component-database": "^3.1",
    "eureka/component-validation": "^5.1",

    "psr/cache": "^1.0",
    "psr/log": "^1.1"
  },

  "require-dev": {
    "dealerdirect/phpcodesniffer-composer-installer": "^v0.7",
    "eureka/component-console": "^5.1",
    "phpstan/phpstan": "^1.4",
    "phpunit/phpcov": "^8.2",
    "phpunit/phpunit": "^9.4",
    "squizlabs/php_codesniffer": "^3.5",
    "symfony/cache": "^v5.4"
  },

  "config": {
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
